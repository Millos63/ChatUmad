<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ChatUmad.Aeditar"
             Title="Editar">
    <Grid Margin="0"
          RowDefinitions="Auto,*,Auto">
        <Label
            Text="Avisos generales"
            FontSize="25"
            HorizontalOptions="FillAndExpand"
            HorizontalTextAlignment="Start"
            BackgroundColor="#1B2953"/>
        <Image
            Source="logo.png"
            HeightRequest="50"
            HorizontalOptions="End"
            BackgroundColor="White"/>
        <ScrollView
            Grid.Row="1"
            VerticalOptions="FillAndExpand"
            Orientation="Vertical"
            VerticalScrollBarVisibility="Default">
            <ListView ItemsSource="{Binding Avisos}" BackgroundColor="#D9D9D9">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding Pro}" Detail="{Binding Avisop}"
                                  TextColor="Black"
                                  DetailColor="Black"/>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </ScrollView>
        <Entry
            Grid.Row="2"
            Placeholder="Editar aviso"
            TextColor="Black"
            PlaceholderColor="#1B2953"
            FontSize="20"
            BackgroundColor="White"
            />
        <StackLayout Grid.Row="2" Orientation="Horizontal" HorizontalOptions="End" VerticalOptions="End">
            <Button Text="Publicar"
                    SemanticProperties.Hint="Counts the number of times you click"
                    BackgroundColor="#1B2953"
                    TextColor="White"
                    HorizontalOptions="Fill"
                    VerticalOptions="End"/>
            <Button Text="Eliminar"
                    SemanticProperties.Hint="Counts the number of times you click"
                    BackgroundColor="#1B2953"
                    TextColor="White"
                    HorizontalOptions="Fill"
                    VerticalOptions="End"/>
        </StackLayout>
    </Grid>
</ContentPage>